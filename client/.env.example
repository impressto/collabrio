# Collabrio Client Environment Variables
# Development configuration (copy to .env and modify as needed)

# Socket server URL (must start with VITE_ to be available in the browser)
VITE_SOCKET_SERVER_URL=http://localhost:3000

# Logo URL for Collabrio branding
VITE_LOGO_URL=https://impressto.ca/collabrio/client/public/collaborio.png

# Local development example:
# VITE_LOGO_URL=/collaborio.png

# Audio configuration
VITE_AUDIO_VOLUME=0.8
VITE_SOUND_EFFECTS=true
VITE_SOUND_EFFECTS_VOLUME=0.5

# AI configuration
VITE_ASK_AI_MAX_CHARS=500

# Document limits
VITE_MAX_DOCUMENT_CHARS=20000

# School authentication (comma-separated list of valid 6-digit school registration numbers)
# Modify these numbers to match your authorized schools
VITE_VALID_SCHOOL_NUMBERS=906484,894362

# School names mapping (comma-separated list mapping school numbers to names)
# Format: number1:Name 1,number2:Name 2
# Must match the numbers in VITE_VALID_SCHOOL_NUMBERS
VITE_SCHOOL_NAMES=906484:Earl of March Secondary School,894362:Bell High School

# Other configuration
VITE_DEBUG=false
VITE_RECONNECTION_ATTEMPTS=10
VITE_SESSION_KEEPALIVE_INTERVAL=30000

# Development settings example:
# VITE_DEBUG=true
# VITE_RECONNECTION_ATTEMPTS=5