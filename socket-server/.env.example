PORT=4244

# Cohere AI API Key for Ask AI functionality
# Get your API key from https://cohere.com/
COHERE_API_KEY=your_cohere_api_key_here

# Cohere AI Model (update as new models become available)
COHERE_MODEL=command-a-03-2025

# School authentication (comma-separated list of valid 6-digit school registration numbers)
# Modify these numbers to match your authorized schools
VALID_SCHOOL_NUMBERS=906484,894362

# School names mapping (comma-separated list mapping school numbers to names)
# Format: number1:Name 1,number2:Name 2
# Must match the numbers in VALID_SCHOOL_NUMBERS
SCHOOL_NAMES=906484:Earl of March Secondary School,894362:Bell High School

# Document limits
MAX_DOCUMENT_CHARS=20000

# File upload configuration
MAX_FILE_SIZE_MB=100
FILE_TIMEOUT_MINUTES=5
MAX_UPLOADS_PER_USER=3
UPLOAD_WINDOW_MINUTES=5

# Add other environment variables as needed
